<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bluebackground"
    tools:context="com.example.shapez.MemoryActivity" >

    <Button
        android:id="@+id/level1Btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="157dp"
        android:layout_marginLeft="85dp"
        android:onClick="lvl1"
        android:background="@drawable/level1_label"
        android:textColor="#ffffff"
        android:text="" />

    <Button
        android:id="@+id/level2Btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level1Btn"
        android:layout_below="@+id/level1Btn"
        android:layout_marginTop="31dp"
        android:onClick="lvl2"
        android:background="@drawable/level2_label"
        android:textColor="#ffffff"
        android:text="" />

    <Button
        android:id="@+id/level3Btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level2Btn"
        android:layout_below="@+id/level2Btn"
        android:layout_marginTop="31dp"
        android:onClick="lvl3"
        android:background="@drawable/level3_label"
        android:textColor="#ffffff"
        android:text="" />

    <Button
        android:id="@+id/backBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="backToPrevious"
        android:text=""
        android:background="@drawable/back_button" />

    <Button
        android:id="@+id/survivalBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/level3Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/survival_label"
        android:textColor="#ffffff"
        android:onClick="toSurvival"
        android:text="" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/memorygame_label" />

</RelativeLayout>
