<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shapez"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/green"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".GameOverActivity"
            android:label="@string/title_activity_game_over" >
        </activity>
        <activity
            android:name=".MemoryActivity"
            android:label="@string/title_activity_memory" >
        </activity>
        <activity
            android:name=".MemoryGame"
            android:label="@string/title_activity_memory_game" >
        </activity>
        <activity
            android:name=".SurvivalActivity"
            android:label="@string/title_activity_survival" >
        </activity>
        <activity
            android:name=".HighScoresActivity"
            android:label="@string/title_activity_high_scores" >
        </activity>
    </application>

</manifest>
